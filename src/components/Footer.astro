---
const currentYear = new Date().getFullYear();
---
<footer class="footer">
  <div class="inner">
    <p>&copy; {currentYear} ORBIT. All rights reserved.</p>
    <div class="socials">
      <a href="#" target="_blank" rel="noopener noreferrer">Twitter</a>
      <a href="#" target="_blank" rel="noopener noreferrer">GitHub</a>
      <a href="/rss.xml">RSS</a>
    </div>
  </div>
</footer>

<style>
  .footer {
    width: 100%;
    border-top: 1px solid var(--c-border);
    padding: 2rem 0;
    margin-top: 4rem;
    color: #71717a;
  }

  .inner {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .inner {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  p {
    font-size: 0.85rem;
    margin: 0;
  }

  .socials {
    display: flex;
    gap: 1.5rem;
  }

  .socials a {
    font-size: 0.85rem;
    transition: color 0.2s ease;
  }

  .socials a:hover {
    color: var(--c-accent);
  }
</style>