<nav class="navbar">
  <div class="inner">
    <a href="/" class="logo">
      ORBIT<span class="accent">.</span>
    </a>
    <div class="menu">
      <a href="/" class="link">Home</a>
      <a href="/posts" class="link">Posts</a>
    </div>
  </div>
</nav>

<style>
  .navbar {
    position: sticky;
    top: 0;
    z-index: 50;
    width: 100%;
    height: 64px;
    background-color: var(--c-glass);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--c-border);
  }

  .inner {
    max-width: 800px;
    height: 100%;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 800;
    letter-spacing: -0.05em;
    color: var(--c-text);
    user-select: none;
  }

  .accent {
    color: var(--c-accent);
  }

  .menu {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .link {
    font-size: 0.9rem;
    font-weight: 500;
    color: #a1a1aa;
    transition: color 0.2s ease;
  }

  .link:hover {
    color: var(--c-text);
  }
</style>