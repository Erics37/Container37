---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { getPosts } from '../../lib/ghost';

const posts = await getPosts();
---

<BaseLayout title="Archive | ORBIT">
  <div class="header">
    <h1 class="title">Archive<span class="dot">.</span></h1>
    <p class="subtitle">Exploring the digital void.</p>
  </div>

  <div class="grid">
    {posts.map((post) => (
      <PostCard post={post} />
    ))}
  </div>
</BaseLayout>

<style>
  .header {
    padding: 2rem 0 3rem;
    border-bottom: 1px solid var(--c-border);
    margin-bottom: 3rem;
  }

  .title {
    font-size: 3rem;
    font-weight: 800;
    line-height: 1;
    margin: 0 0 1rem;
    letter-spacing: -0.05em;
  }

  .dot {
    color: var(--c-accent);
  }

  .subtitle {
    font-size: 1.1rem;
    color: #a1a1aa;
    margin: 0;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>